@model List<string>

@{
	ViewData["Title"] = "Zoo sunset";
}

<html>
<body>
	<div class="display-info">
		@if (Model.Any())
		{
			@foreach (string item in Model)
			{
				<ul>@item</ul>
			}
		}
		else
		{
			<a>It seems that there are no animals in the zoo yet, please consider adding some.</a>
		}
	</div>
	<div>
        <a asp-action="Index" asp-controller="Home">Back to action page</a>
	</div>
</body>
</html>
